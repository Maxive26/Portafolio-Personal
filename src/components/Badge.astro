---
interface Props {
  text: string;
  href?: string;
  class?: string;
}
const { text, href, class: className = "" } = Astro.props;
---

<a
  href={href}
  target="_blank"
  class={`inline-flex items-center rounded-md bg-yellow-50 px-2 py-1 text-sm
font-medium text-yellow-800 ring-1 ring-inset ring-yellow-600/20 ${className} transition-colors hover:text-red-700 hover:bg-red-50`}
  >{text}</a
>
